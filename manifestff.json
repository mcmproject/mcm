{
    "manifest_version": 2,
  
    "name": "MyCity Manager",
    "description": "MyCity Manager pro≈°irenje za MyCity i MyCity Military forume.",
    "version": "1.0.1",

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://www.mycity.rs/*",
                "https://www.mycity-military.com/*"
            ],
            "js": ["public/js/manager.js"]
        }
    ],
    "background": {
        "scripts": ["public/js/browser.js"]
    },
    "browser_action": {
      "default_icon": "public/images/icon.png"
    },
    "icons": {
        "16": "public/images/icon16.png",
        "32": "public/images/icon32.png",
        "128": "public/images/icon128.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "unlimitedStorage"
    ],
    "applications": {
        "gecko": {
            "id": "mcmproject@mcmproject.github.io"
        }
    }
}