{
    "manifest_version": 2,
  
    "name": "MyCity Manager",
    "description": "MyCity Manager pro≈°irenje za MyCity i MyCity Military forume.",
    "version": "1.4.0",
    "update_url": "https://mcmproject.github.io/download/updates.xml",

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "https://www.mycity.rs/*",
                "https://www.mycity-military.com/*"
            ],
            "js": [
                "public/js/manager.js",
                "public/js/gifffer.min.js",
                "public/js/loader.js"
            ]
        }
    ],
    "background": {
        "scripts": ["public/js/browser.js"]
    },
    "browser_action": {
      "default_icon": "public/images/icon.png"
    },
    "icons": {
        "16": "public/images/icon16.png",
        "32": "public/images/icon32.png",
        "128": "public/images/icon128.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "unlimitedStorage"
    ]
}