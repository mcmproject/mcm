{
    "manifest_version": 2,
  
    "name": "MyCity Manager",
    "description": "MyCity Manager proširenje za Google Chrome pregledač i njegove derivate.",
    "version": "1.0.0",

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["https://*/*"],
            "js": ["public/js/manager.js"]
        }
    ],
    "background": {
        "scripts": ["public/js/browser.js"],
        "persistent": false
    },
    "browser_action": {
      "default_icon": "public/images/icon.png",
      "title": "MyCity Manager"
    },
    "icons": {
        "16": "public/images/icon16.png",
        "32": "public/images/icon32.png",
        "128": "public/images/icon128.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "unlimitedStorage"
    ],
    "offline_enabled": true
  }